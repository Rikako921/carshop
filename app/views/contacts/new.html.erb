<%= render "shared/header" %>

<div class="contact-form-container">
  <div class="contact-form">
    <div class="contact-title">お問い合わせフォーム</div>
    <div class="contact-attention">気になるお車や、査定のご予約などお気軽にご記入ください。</div>
    
    <div class="mb-2 text-center">
      <%= flash[:alert] %>
    </div>

    <%= form_with model: @contact, url: confirm_contacts_path, local: true, data: { turbo: false } do |f| %>
      <div class="form-group">
        <%= f.label :name, 'お名前' %><span class="text-danger">*</span>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %><span class="text-danger">*</span>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, '電話番号' %><span class="text-danger">*</span>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :message, 'メッセージ' %><span class="text-danger">*</span>
        <%= f.text_area :message, size: '10x10', class: 'form-control' %>
      </div>

      <div class="text-center">
        <%= f.submit '入力内容確認', class: "btn btn-outline-info bg-white custom-btn" %>
      </div>
    <% end %>

  </div>
</div>
